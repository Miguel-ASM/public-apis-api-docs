---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import logo from "../images/icons/code-svgrepo-com.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="h-full"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/pretty-print-json@2.0.3/dist/pretty-print-json.min.js"
    ></script>
    <link
      href="
  https://cdn.jsdelivr.net/npm/pretty-print-json@2.0.3/dist/css/pretty-print-json.min.css"
      rel="stylesheet"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={logo.src}
    />
    <title>{title}</title>
    <style>
      .cards-container {
        gap: 10px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      }
    </style>
  </head>

  <body class="flex flex-col min-h-full">
    <Header />
    <main
      class="grow bg-white pt-32 pb-12 px-8 flex flex-col gap-y-10 items-center"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
