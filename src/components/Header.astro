---
import logo from "../images/icons/code-svgrepo-com.svg";
import githubIcon from "../images/icons/github-142-svgrepo-com.svg";
---

<header
  class="shadow sticky inset-x-0 top-0 z-50 bg-white border-b border-slate"
>
  <nav
    class="flex items-center justify-between py-6 px-8"
    aria-label="Global"
  >
    <div class="flex lg:flex-1">
      <a
        href="/"
        class="-m-1.5 p-1.5"
      >
        <span class="sr-only">Public APIs API</span>
        <img
          class="h-8 w-8"
          src={logo.src}
          alt="logo"
        />
      </a>
    </div>
    <div class="lg:flex lg:flex-1 lg:justify-end">
      <a
        href="https://github.com/Miguel-ASM/public-apis-API"
        target="_blank"
        rel="noopener noreferrer"
        class="text-sm font-semibold leading-6 text-gray-900 inline-flex items-center gap-x-2"
      >
        View in github
        <img
          class="h-8 w-8"
          src={githubIcon.src}
          alt="github repository"
        />
      </a>
    </div>
  </nav>
</header>
