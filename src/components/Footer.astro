---
import githubIcon from "../images/icons/github-142-svgrepo-com-white.svg";
import linkedinIcon from "../images/icons/linkedin-svgrepo-com-white.svg";
import { t } from "i18next";
---

<footer class="h-20 bg-gray-800 px-6 py-4 shadow lg:px-8">
  <div class="flex w-full items-center justify-between">
    <span class="text-sm text-white sm:text-center">
      {t("footer.text")}
    </span>
    <ul
      class="mt-3 flex flex-wrap items-center gap-x-6 text-sm font-medium text-gray-400 sm:mt-0"
    >
      <li>
        <a
          href="https://github.com/Miguel-ASM"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="h-8 w-8 fill-white"
            src={githubIcon.src}
            alt="github profile"
          />
        </a>
      </li>
      <li>
        <a
          href="https://www.linkedin.com/in/miguel-angel-simon-full-stack-developer/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            class="h-8 w-8 fill-white"
            src={linkedinIcon.src}
            alt="linkedin profile"
          />
        </a>
      </li>
    </ul>
  </div>
</footer>
